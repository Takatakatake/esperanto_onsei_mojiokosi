TRANSCRIPTION_BACKEND=speechmatics  # options: speechmatics, vosk, whisper

# Speechmatics realtime configuration (replace with your own key before use)
SPEECHMATICS_API_KEY=your_speechmatics_api_key
SPEECHMATICS_APP_ID=realtime
SPEECHMATICS_LANGUAGE=eo
# Override if your tenant uses a different regional endpoint (e.g., us2)
# SPEECHMATICS_CONNECTION_URL=wss://eu2.rt.speechmatics.com/v2
# If you already generated a short-lived JWT, you can set it here instead of the API key exchange
# SPEECHMATICS_JWT=eyJhbGciOi...
# JWT validity when auto-exchanging API key (in seconds)
# SPEECHMATICS_JWT_TTL=3600

# Vosk offline fallback (set when TRANSCRIPTION_BACKEND=vosk or using as backup)
# VOSK_MODEL_PATH=/path/to/vosk-model-small-eo-0.42
# VOSK_SAMPLE_RATE=16000
# VOSK_ENABLE_PARTIALS=true

# Whisper streaming backend (requires faster-whisper and suitable hardware)
# WHISPER_MODEL_SIZE=medium
# WHISPER_DEVICE=auto          # e.g. cuda, cpu, mps
# WHISPER_COMPUTE_TYPE=default # e.g. float16 (GPU)
# WHISPER_LANGUAGE=eo
# WHISPER_SEGMENT_DURATION=6.0
# WHISPER_BEAM_SIZE=1

# Audio interface overrides (set AUDIO_DEVICE_INDEX to the loopback device you use)
# AUDIO_DEVICE_INDEX=8
# AUDIO_SAMPLE_RATE=16000
# AUDIO_CHUNK_DURATION_SECONDS=0.5

# Zoom closed caption endpoint (leave blank/disabled for Google Meet)
# ZOOM_CC_POST_URL=https://wmcc.zoom.us/closedcaption?...&token=abc&lang=eo&seq=
# ZOOM_CC_ENABLED=true

# Transcript logging
# TRANSCRIPT_LOG_ENABLED=true
# TRANSCRIPT_LOG_PATH=logs/meet-session.log
# TRANSCRIPT_LOG_OVERWRITE=false
