TRANSCRIPTION_BACKEND=speechmatics

# Speechmatics realtime configuration
# Replace API key with your own before use
SPEECHMATICS_API_KEY="***"
SPEECHMATICS_APP_ID=realtime
SPEECHMATICS_LANGUAGE=eo
SPEECHMATICS_CONNECTION_URL=wss://eu2.rt.speechmatics.com/v2
SPEECHMATICS_SAMPLE_RATE=16000

# Google Meet loopback audio device (from `--list-devices`)
AUDIO_DEVICE_INDEX=6
AUDIO_SAMPLE_RATE=16000
AUDIO_CHANNELS=1
AUDIO_CHUNK_DURATION_SECONDS=0.5

# Disable Zoom caption posting for Meet sessions
ZOOM_CC_ENABLED=false

# Transcript logging (rotated manually as needed)
TRANSCRIPT_LOG_ENABLED=true
TRANSCRIPT_LOG_PATH=logs/meet-session.log

# Optional: enable Whisper/Vosk fallback by overriding TRANSCRIPTION_BACKEND
# VOSK_MODEL_PATH=/path/to/vosk-model-small-eo-0.42
# WHISPER_MODEL_SIZE=medium
# TRANSCRIPT_LOG_OVERWRITE=false

WEB_UI_ENABLED=true
WEB_UI_OPEN_BROWSER=true

# Translation: Speechmatics -> Japanese/Korean via Google (service account)
TRANSLATION_ENABLED=true
TRANSLATION_SOURCE_LANGUAGE=eo
TRANSLATION_TARGETS=ja,ko
TRANSLATION_PROVIDER=google
TRANSLATION_TIMEOUT_SECONDS=8.0
# GOOGLE_TRANSLATE_API_KEY=***
GOOGLE_TRANSLATE_CREDENTIALS_PATH=/absolute/path/to/google-service-account.json
GOOGLE_TRANSLATE_MODEL=nmt

# Discord integration intentionally disabled
DISCORD_WEBHOOK_ENABLED=false
